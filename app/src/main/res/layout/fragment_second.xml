<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrice2" />

    <ImageView
        android:id="@+id/imgdetails"
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtname2"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txtname2"
        android:layout_width="317dp"
        android:layout_height="28dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdes2"
        android:layout_width="133dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgdetails"
        app:layout_constraintTop_toBottomOf="@+id/txtname2" />

    <TextView
        android:id="@+id/txtlasp2"
        android:layout_width="136dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgdetails"
        app:layout_constraintTop_toBottomOf="@+id/txtdes2" />

    <TextView
        android:id="@+id/txtcred2"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgdetails"
        app:layout_constraintTop_toBottomOf="@+id/txtlasp2" />

    <TextView
        android:id="@+id/txtPrice2"
        android:layout_width="226dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgdetails" />
</androidx.constraintlayout.widget.ConstraintLayout>